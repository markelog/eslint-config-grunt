{
  "env": {
    "node": true
  },
  "globals": {},
  "rules": {
    "no-cond-assign": [
      "error",
      "except-parens"
    ],
    "curly": [
      "error",
      "all"
    ],
    "wrap-iife": [
      "error",
      "any"
    ],
    "no-use-before-define": [
        "error",
        { "functions": false }
    ],
    "new-cap": "error",
    "no-caller": "error",
    "dot-notation": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "operator-linebreak": [
      "error",
      "after"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-multi-str": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-trailing-spaces": "error",
    "space-unary-ops": [
      "error",
      {
        "nonwords": false,
        "overrides": {}
      }
    ],
    "keyword-spacing": [
      "error"
    ],
    "space-infix-ops": "error",
    "space-before-blocks": [
      "error",
      "always"
    ],
    "eol-last": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "no-multiple-empty-lines": "error",
    "no-with": "error",
    "no-spaced-func": "error",
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "valid-jsdoc": "error",
    "max-len": [
      "error",
      120
    ],
    "quotes": [
      "error",
      "single",
      "avoid-escape"
    ],
    "one-var": [
      "error",
      {
        "uninitialized": "always",
        "initialized": "never"
      }
    ]
  }
}
